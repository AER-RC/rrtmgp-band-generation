#

OBJPATH = ../objdir

SRCPATH = .

VPATH = $(SRCPATH): $(OBJPATH)



OBJ2 = \
	write_tape5s

all: makedir	$(OBJ2) conclude

planck_int: planck_int.f r1mach.o
	pgf90  planck_int.f r1mach.o -o $(OBJPATH)/planck_int

r1mach.o: r1mach.f
	pgf90 -c -o r1mach.o r1mach.f

$(OBJ2): std_atmos.f

$(OBJ3): std_atmos.f

$(OBJ1): std_atmos_kdis.f


% :%.f90
	pgf90  $< -o $(OBJPATH)/$@


.SILENT:

makedir :
	if [ ! -d $(OBJPATH) ] ; \
	then \
	mkdir $(OBJPATH) ; \
	fi

conclude:
	rm *.o
